<!-- JavaScript for interactions -->
<script>
    // Toggle password visibility
    function togglePassword(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector('i');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.className = 'ri-eye-off-line';
        } else {
            input.type = 'password';
            icon.className = 'ri-eye-line';
        }
    }

    // Smooth scroll to register form (for mobile responsiveness)
    function scrollToRegister() {
        document.querySelector('.w-1\\/2').scrollIntoView({ 
            behavior: 'smooth' 
        });
    }

    // Auto-hide error messages
    setTimeout(function() {
        const errorMessage = document.querySelector('.fixed.top-5');
        if (errorMessage) {
            errorMessage.style.opacity = '0';
            errorMessage.style.transition = 'opacity 0.5s ease-out';
            setTimeout(function() {
                errorMessage.remove();
            }, 500);
        }
    }, 5000);

    // Add loading state to forms
    document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', function(e) {
            const submitButton = this.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            
            submitButton.innerHTML = '<i class="ri-loader-4-line animate-spin mr-2"></i>Processing...';
            submitButton.disabled = true;
            
            // Re-enable button after 3 seconds (fallback)
            setTimeout(() => {
                submitButton.textContent = originalText;
                submitButton.disabled = false;
            }, 3000);
        });
    });

    // Add floating label effect
    document.querySelectorAll('input[type="text"], input[type="email"], input[type="password"]').forEach(input => {
        input.addEventListener('focus', function() {
            this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
            if (!this.value) {
                this.parentElement.classList.remove('focused');
            }
        });
    });
</script>

